<h1>Update photo</h1>

<form action="/update_photo/<%= @id.id %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= @id.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @id.source %>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
